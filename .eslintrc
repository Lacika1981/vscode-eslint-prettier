{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"allowImportExportEverywhere": true,
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true
	},
	"extends": [
		"eslint:recommended"
	],
	"rules": {
		"no-unused-vars": ["off", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
		"no-undef": "off"
    }
}
